<p id="notice"></p>
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.本のタイトル %></td>
        <td><%= book.感想 %></td>
        <td><a class="show_76564" href="/books/76564">Show</a></td>
        <td><a class="edit_76564" href="/books/76564/edit">Edit</a></td>
        <td><a data-confirm="Are you sure?" class="destroy_76564" rel="nofollow" data-method="delete" href="/books/76564">Destroy</a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :本のタイトル %>
  </div>

  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :感想 %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
